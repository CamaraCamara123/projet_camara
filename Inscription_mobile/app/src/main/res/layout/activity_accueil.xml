<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="80dp"
    tools:context=".AccueilActivity">

    <Button
        android:id="@+id/new_filiere"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="125dp"
        android:text="New filiere" />

    <Button
        android:id="@+id/list_filiere"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_below="@+id/new_filiere"
        android:layout_alignBottom="@id/new_filiere"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="-93dp"
        android:text="Liste filiere" />

    <Button
        android:id="@+id/new_user"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/list_filiere"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="-96dp"
        android:text="New User" />

    <Button
        android:id="@+id/list_user"
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:layout_below="@+id/new_user"
        android:layout_alignBottom="@id/new_user"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="128dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="-116dp"
        android:text="Liste user" />
</RelativeLayout>